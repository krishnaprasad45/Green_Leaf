<%-include('../admin/_header.ejs') -%>



<body class="bg-white min-vh-100 border-top border-primary border-3">
  <section class="container text-center fx-fade-up py-5 py-md-6 py-xl-8">
    <!-- <a href="index.html">
      <img src="assets/img/svg/logo.svg" alt="">
    </a> -->

    <h4 class="font-weight-normal mt-5">
      Reset your password
    </h4>

    <p class="text-center text-secondary mt-4">
      Enter you new password
    </p>

    <div class="row justify-content-center mt-4 pt-3">
      <div class="col-md-6 col-lg-4">
        <form action="/newPassword" method="post" id="newPass">
          <div class="mb-3">
            <input type="password" id="password" name="password" required placeholder="Enter New Password" class="form-control form-control-lg bg-pastel-darkblue">
          </div>
          <div class="mb-3">
            <input type="password" placeholder="Confirm Password" id="new_password" name="new_password" required class="form-control form-control-lg bg-pastel-darkblue">
          </div>

          <input type="submit" style="background-color: #79a206;" class="btn btn-primary btn-lg shadow-light text-uppercase-bold-sm hover-lift mt-4" value="Verify Email">

          <div class="text-secondary font-size-sm mt-5">
            Don't have an account?
            <a href="/user_register" class="ml-2">Sign up</a>
          </div>

          <div class="recover">
            <a href="/login">Remember Password?</a>
          </div>
      
          <p id="notmatch">Password does not match</p>
          <p id="fillout2">Please enter a valid OTP</p>
      
          <div class="logout_alert" role="alert"></div>
          <div class="invalid_alert" role="alert">
            <%= invalidOtp %>
          </div>
        </form>
      </div>
    </div>
 
  </section>

  <!-- JAVASCRIPT
  ============================================-->

  <!-- Vendor -->
  <script src="assets/js/vendor.min.js"></script>


  <!-- Main Theme file -->
  <script src="assets/js/theme.min.js"></script>
  <script src="assets/js/validate.js"></script>

  


</body>

