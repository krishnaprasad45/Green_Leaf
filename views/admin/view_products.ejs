          </div>
        </div>

        <div class="table-responsive">
          <table class="table table-sm card-table table-nowrap">
            <thead>
              <tr>
                
                <th>
                 Product 
                </th>
                <th>
                  Details
                </th>
                <th>
                  Category
                </th>
                <th>
                  Price
                </th>
                <th>
                  Stock
                </th>
                
                <th>&nbsp;</th>
              </tr>
            </thead>
            <tbody class="list">
              <% data.forEach(async (product)=> { %>
                <tr>
                  <td>
                    <div class="item-name-wrapper">
                      <a href="#!" class="item-name text-dark">
                        <%= product.product_name %>
                      </a>
                    </div>
                    <div class="avatar-wrapper">
                      <span class="avatar avatar-lg me-3">
                        <img src="<%= product.imageUrl[0].url %>" class="avatar-image" alt="">
                      </span>
                    </div>
                  </td>
                  
                  
                  
                  <td class="item-email">
                    <div class="product-details">
                      <%= product.product_details %>
                    </div>
                  </td>
                  
                  <td class="item-role">
                    <%= product.category %>
                  </td>
                  <td>
                    <%= product.price %>
                  </td>
                  <td>
                    <%= product.stock %>
                  </td>
                  <td>
                    <div class="dropdown">
                      <a href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="svg-icon text-gray-500">
                          <svg xmlns="http://www.w3.org/2000/svg" width="512" height="512" viewBox="0 0 512 512"><title>ionicons-v5-f</title><circle cx="256" cy="256" r="32" style="fill:none;stroke:#000;stroke-miterlimit:10;stroke-width:32px"/><circle cx="416" cy="256" r="32" style="fill:none;stroke:#000;stroke-miterlimit:10;stroke-width:32px"/><circle cx="96" cy="256" r="32" style="fill:none;stroke:#000;stroke-miterlimit:10;stroke-width:32px"/></svg>
                        </span>
                      </a>
                      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="/update_product/<%=product._id %>">Edit</a>
                        <a class="dropdown-item text-danger" href="/delete_product/<%=product._id %>">Remove</a>
                      </div>
                    </div>
                  </td>
                </tr>
                <% }) %>
            </tbody>
            
            

            
          </table>
        </div>

        <div class="card-footer d-flex justify-content-center p-0">
          <ul class="nav-pagination">
            <li>
              <a class="page" href="#!">1</a>
            </li>
            <li>
              <a class="page" href="#!">2</a>
            </li>
            <li>
              <a class="page" href="#!">3</a>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <div class="list-alert alert alert-dark w-300 w-md-400 border-0 shadow-light-lg fade fixed-bottom start-50 translate-middle-x mb-4" role="alert" style="z-index: -1;">
      <div class="row align-items-center">
        <div class="col">
          <div class="form-check">
            <input class="form-check-input" id="listAlertCheckbox" type="checkbox" checked onclick="return false;">
            <label class="form-check-label text-white relative-top-2 ms-1" for="listAlertCheckbox">
              <span class="list-alert-count">0</span> customers(s)
            </label>
          </div>
        </div>
        <div class="col-12 col-sm-auto ms-3 mt-3 mt-md-0">
          <button class="btn btn-sm btn-pastel-purple">
            Send refund
          </button>
          <button class="btn btn-link list-alert-close btn-sm text-white">Close</button>
        </div>
      </div>
    </div>
  </div>

