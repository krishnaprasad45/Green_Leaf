  <div class="main-content">
  <%-include('_navbar')-%>
    


    <div class="container-fluid mt-4 pt-2 mb-7">
      <!-- header -->
      <div class="d-md-flex align-items-center">
        <h3 class="mb-3 mb-md-0">
          Products
