<%-include('./_header')-%>

  <body>
    <%-include('_left_sidebar')-%>



     


      <div class="main-content">
        <%-include('_navbar')-%>


        






          <div class="row justify-content-center mt-5">
            <div class="col-12 col-xl-7">
              <h3 class="mb-3 mb-md-0">
                Update Banner
              </h3>
              <form action="/updateBanner/<%= bannerData._id %>" method="post" id="bannerValidate" enctype="multipart/form-data">
                <div class="form-group mt-4 pt-3">
                  <label class="form-label">
                    Banner Title:
                  </label>
                  <input type="text" class="form-control green-border" id="title" value="<%= bannerData.title %>" name="title">
                </div>

                <div class="form-group mt-4 pt-3">
                    <label class="form-label">
                      Banner Label:
                    </label>
                    <input type="text" class="form-control green-border" id="label" value="<%= bannerData.label %>"name="label">
                  </div>
              
                <div class="form-group mt-4">
                  <label class="form-label">
                    Banner Subtitle :
                  </label>
                  <textarea rows="4" class="form-control green-border" id="bannerSubtitle" value="<%= bannerData.subtitle %>" name="bannerSubtitle"></textarea>
                </div>
              
               
              
              
            
                <div class="from-group mt-4">
                  <label class="form-label mb-0">
                    Banner Image:
                  </label>
                  <p class="form-text">
                    Upload a JPG or PNG. No larger than 1200px.
                  </p>
                  <div class="file-input-container">
					<input type="file" 
                     class="form-control green-border file-input"  id="image" name="image" accept="image/*" required>
					
				  </div>
				  

                  <img id="preview1" src="#" alt="Image Preview" src="<%= bannerData.image.url %>" style="display: none;">
                  

  
                </div>
              
                <div class="d-grid gap-3 mt-5">
                  <button class="btn btn-primary btn-lg hover-lift-light" type="submit">Update</button>
                  <!-- <button class="btn btn-link">Cancel</button> -->
                  <br>
                </div>
              </form>
              
            </div>
          </div>
        
      </div>

      <!-- JAVASCRIPT
  ============================================-->

      <!-- Vendor -->
      <script src="/assets_admin/js/vendor.min.js"></script>


      <!-- Main Theme file -->
      <script src="/assets_admin/js/theme.min.js"></script>

      <!-- validate -->

      <script src="/assets_admin/js/validate.js"></script>


  </body>


  </html>