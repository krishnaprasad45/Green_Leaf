



<%-include('_header')-%>
  
    <%-include('_left_sidebar')-%>



      


      <div class="main-content">
        


        <div class="container-fluid pb-7">






          <div class="row justify-content-center mt-5">
            <div class="col-12 col-xl-7">
              <h3 class="mb-3 mb-md-0">
                Update Category
              </h3>
              <form action="/updateCategoryPost/<%= category._id %>" method="post">

                <div class="from-group mt-4 pt-3">
                  <label class="form-label">
                    Category name:
                  </label>
                  <input type="text" class="form-control yellow-border" value="<%=category.category %>"
                    name="category_name">
                </div>

                <div class="from-group mt-4">
                  <label class="form-label">
                    Description:
                  </label>
                  <textarea rows="4" class="form-control yellow-border"
                    name="category_details"><%=category.description %></textarea>
                </div>

            

                <div class="form-group mt-4">
                  <label class="form-label mb-0">
                    Category Image:
                  </label>
                  <p class="form-text">
                    Upload a JPG or PNG. No larger than 1200px.
                  </p>
                  <input type="file" id="category_image" class="form-control yellow-border"  value="<%=category.category %>" name="category_image" accept="image">
                  <img id="preview" src="#" alt="Image Preview" style="display: none;">
                </div>

                <!-- <div class="from-group mt-4">
              <label class="form-label mb-0">
                Product Image:
              </label>
              <p class="form-text">
                Upload a JPG or PNG. No larger than 1200px.
              </p>
              <input type="file" class="form-control yellow-border" name="product_img">
            </div> -->

                <div class="d-grid gap-3 mt-5">
                  <button class="btn btn-primary btn-lg hover-lift-light" type="submit">Update </button>
                  <button class="btn btn-link">Cancel</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

