  <body>
    <%-include('_left_sidebar')-%>






      <div class="main-content">
        <%-include('_navbar')-%>









          <div class="row justify-content-center mt-5">
            <div class="col-12 col-xl-7">
              <h3 class="mb-3 mb-md-0">
                Update Product
              </h3>
              <form action="/add_product_post" method="post" enctype="multipart/form-data">
                <div class="form-group mt-4 pt-3">
                  <label class="form-label">
                    Product name:
                  </label>
                  <input type="text" class="form-control green-border" value="<%=product.product_name %>" name="product_name">
                </div>

                <div class="form-group mt-4">
                  <label class="form-label">
                    Project details:
                  </label>
                  <textarea rows="4" class="form-control green-border" value="<%=product.product_details %>" name="product_details"></textarea>
                </div>
                <div class="form-group mt-4">
                  <label class="form-label">
                    Category:
                  </label>
                  <div class="input-group">
                    <select class="form-control green-border" name="category">
                      <option value="<%=product.category %>" disabled selected><%=product.category %></option>
                      <% categoryDatas.forEach(async (i)=> { %>

                        <option value="<%=i.category %>">
                          <%=i.category%>
                        </option>

                        <% }) %>

                    </select>
                  </div>
                </div>
                <div class="from-group mt-4">
                  <label class="form-label">
                    Stock:
                  </label>
                  <div class="input-group">
                    <input type="text" class="form-control yellow-border" value="<%=product.stock %>" name="price">
                  </div>
                </div>

                <div class="form-group mt-4">
                  <label class="form-label">
                    Quantity:
                  </label>
                  <div class="input-group">
                    <input type="number" class="form-control green-border" id="quantity" value="<%=product.stock %>" name="quantity">
                  </div>
                </div>

                <div class="form-group mt-4">
                  <label class="form-label">
                    Price:
                  </label>
                  <div class="input-group">
                    <input type="text" class="form-control green-border" value="<%=product.price %>" name="price">
                  </div>
                </div>

                <div class="from-group mt-4">
                  <label class="form-label mb-0">
                    Product Images:
                  </label>
                  <p class="form-text">
                    Upload a JPG or PNG. No larger than 1200px.
                  </p>
                  <div class="file-input-container">
                    <input type="file" id="product_image1" value="<%=product.imageUrl[0].url %>"  class="form-control green-border file-input"
                      name="product_image" accept="image">
                    <input type="file" id="product_image2" value="<%=product.imageUrl[1].url %>"  class="form-control green-border file-input"
                      name="product_image" accept="image">
                    <input type="file" id="product_image3" value="<%=product.imageUrl[2].url %>" class="form-control green-border file-input"
                      name="product_image" accept="image">
                    <input type="file" id="product_image4" value="<%=product.imageUrl[3].url %>"  class="form-control green-border file-input"
                      name="product_image" accept="image">
                  </div>


                  <div class="image-preview-container">
                    <img id="preview1" src="#" class="image-preview" alt="Image Preview" style="display: none;">
                    <img id="preview2" src="#" class="image-preview" alt="Image Preview" style="display: none;">
                    <img id="preview3" src="#" class="image-preview" alt="Image Preview" style="display: none;">
                    <img id="preview4" src="#" class="image-preview" alt="Image Preview" style="display: none;">
                </div>


                </div>

                <div class="d-grid gap-3 mt-5">
                  <button class="btn btn-primary btn-lg hover-lift-light" type="submit">Update</button>
                  <!-- <button class="btn btn-link">Cancel</button> -->
                  <br>
                </div>
              </form>

            </div>
          </div>

      </div>

      <!-- JAVASCRIPT
  ============================================-->

      <!-- Vendor -->
      <script src="assets_admin/js/vendor.min.js"></script>


      <!-- Main Theme file -->
      <script src="assets_admin/js/theme.min.js"></script>

      <!-- Image Preview -->
      <script>
        // Image preview code
        function previewImage(event, imageNumber) {
          var preview = document.getElementById(`preview${imageNumber}`);
          var file = event.target.files[0];
          var reader = new FileReader();
    
          reader.onload = function() {
            preview.src = reader.result;
            preview.style.display = "block";
          }
    
          if (file) {
            reader.readAsDataURL(file);
          } else {
            preview.src = "#";
            preview.style.display = "none";
          }
        }
    
        // Add event listeners for image previews
        document.getElementById("product_image1").addEventListener("change", function(event) {
          previewImage(event, 1);
        });
    
        document.getElementById("product_image2").addEventListener("change", function(event) {
          previewImage(event, 2);
        });
    
        document.getElementById("product_image3").addEventListener("change", function(event) {
          previewImage(event, 3);
        });
    
        document.getElementById("product_image4").addEventListener("change", function(event) {
          previewImage(event, 4);
        });
    </script>
    

  </body>


  </html>