<%-include('./_header')-%>

  <body>
    <%-include('_left_sidebar')-%>






      <div class="main-content">
        <%-include('_navbar')-%>









        <div class="row justify-content-center mt-5">
          <div class="col-12 col-xl-7">
            <h3 class="mb-3 mb-md-0">
              Add Category
            </h3>
            <form action="/addCategory" method="post" enctype="multipart/form-data">
              <div class="from-group mt-4 pt-3">
                <label class="form-label">
                  Category name:
                </label>
                <input type="text" class="form-control yellow-border" name="category_name" required>
              </div>
      
              <div class="from-group mt-4">
                <label class="form-label">
                  Description:
                </label>
                <textarea rows="4" class="form-control yellow-border" name="category_details" required></textarea>
              </div>
      
              <div class="from-group mt-4">
                <label class="form-label mb-0">
                  Category Image:
                </label>
                <p class="form-text">
                  Upload a JPG or PNG. No larger than 1200px.
                </p>
                <input type="file" id="category_image" class="form-control yellow-border" name="category_image" accept="image" >
                <img id="preview" src="#" alt="Image Preview" style="display: none;">

              </div>
      
              <div class="d-grid gap-3 mt-5">
                <button class="btn btn-primary btn-lg hover-lift-light" type="submit">Add</button>
                <!-- <button class="btn btn-link">Cancel</button> -->
                <br>
              </div>
            </form>
          </div>
        </div>

      </div>

      <!-- JAVASCRIPT
  ============================================-->

      <!-- Vendor -->
      <script src="/assets_admin/js/vendor.min.js"></script>


      <!-- Main Theme file -->
      <script src="/assets_admin/js/theme.min.js"></script>

  </body>


  </html>