<!-- JavaScript code to apply word wrapping for each product -->
<script>
  window.addEventListener("DOMContentLoaded", function () {
    const productDetailContainers = document.querySelectorAll(".product-details");
    const wordsPerLine = 6;

    productDetailContainers.forEach((productDetailsContainer) => {
      const words = productDetailsContainer.innerText.split(" ");
      let formattedContent = "";
      for (let i = 0; i < words.length; i++) {
        formattedContent += words[i] + " ";
        if ((i + 1) % wordsPerLine === 0) {
          formattedContent += "<br>";
        }
      }
      productDetailsContainer.innerHTML = formattedContent.trim();
    });
  });
</script>


